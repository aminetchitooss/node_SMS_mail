<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Tchitos Mail</title>
  <link rel="icon" href="public/favicon.ico" type="image/x-icon" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
    integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.css" />
  <script src="//cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>
  <link rel="stylesheet" href="public/css/style.css">
</head>

<body>
  <div class="container">
    <p class="ip">This is your api address <em>{{ip}}</em> </p>
    <div class="head">
      <h1 class="brand"><span>Tchitos</span> Web Design </h1>
      <img src="public/logo.png" alt="">
    </div>
    <div class="wrapper animated bounceInLeft">
      <div class="company-info">
        <h3>Tchitos Web Design</h3>
        <ul>
          <li><i class="fa fa-road"></i> Paris</li>
          <li><i class="fa fa-phone"></i> (555) 555-5555</li>
          <li><i class="fa fa-envelope"></i>
            <a href="mailto:amine.tchitooss@gmail.com">amine.tchitooss@gmail.com</a>
          </li>
        </ul>
      </div>
      <div class="contact">
        <form method="POST" action="sendMailForm">
          <p>
            <label>Feel free to test</label>
            <input type="email" name="email" placeholder="Your email here">
          </p>
          <p class="full">
            <label>Message</label>
            <textarea name="message"></textarea>
            <script>
              CKEDITOR.replace('message', {
                height: 150
              });

            </script>
          </p>
          <p>
            <button disabled="disabled" id="send" type="submit">Submit</button>
          </p>
        </form>
      </div>
    </div>
  </div>
  <script defer>
    (function () {
      $('input').keyup(function () {
        checkValues()
      });

      for (var i in CKEDITOR.instances) {
        CKEDITOR.instances[i].on('change', function () {
          checkValues()
        });
      }

    })()

    function checkValues() {

      var empty = false;
      var pattern = /^\b[A-Z0-9._%-]+@[A-Z0-9.-]+\.[A-Z]{2,4}\b$/i
      $('input').each(function () {
        if ($(this).val() == '' || !pattern.test($(this).val())
          || $("iframe").contents().find("body").text() === "") {
          empty = true;
        }
      });

      if (empty) {
        $('#send').attr('disabled', 'disabled');
        $('#send').removeClass('fullbtn')
      } else {
        $('#send').removeAttr('disabled');
        $('#send').addClass('fullbtn')

      }
    }

    const $form = $('form')

    // $form.on('submit', submitHandler)

    function submitHandler(e) {

      $.ajax({
        url: '/sendMailForm',
        type: 'POST',
        data: $form.serialize().replace('&message=', '&message=' +
          $("iframe").contents().find("body").find("p")[0].outerHTML)
      }).done(response => {
        if (response.split('Email has been sent').length > 1) {
          document.body.innerHTML = response;
        } else {
          console.log(response)
        }
      })
      e.preventDefault()

    }
  </script>
</body>

</html>